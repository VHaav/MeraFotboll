            foreach($tags as $tag){
                echo "<a href='{$this->url->create("comment/get-comments-by-tag/{$tag->tag}")}'><div class='single_tag'>{$tag->tag}</div></a>";
            }
        ?>
    </p>    
    <div class="divQuestionComments">
        <?php if (isset($comments) && is_array($comments)) : ?>
            <?php $counter = 1; ?>
            <?php foreach($comments as $comment) : ?>
